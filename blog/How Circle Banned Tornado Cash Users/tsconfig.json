{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["src/utils"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
